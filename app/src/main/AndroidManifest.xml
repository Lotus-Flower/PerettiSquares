<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="squares.cherry_blossom.com.perettisquares">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/square_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/square_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Menu.MenuActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Game.GameActivity"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".HighScores.HighScoreActivity"></activity>
    </application>

</manifest>